<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>meveo</id>
                    <url>https://maven.pkg.github.com/meveo-org/meveo</url>
                    <snapshots>
                      <enabled>true</enabled>
                    </snapshots>
                  </repository>
                  <repository>
                    <id>liquichain</id>
                    <url>https://maven.pkg.github.com/liquichain/mv-liquichain</url>
                    <snapshots>
                      <enabled>true</enabled>
                    </snapshots>
                  </repository>
            </repositories>
        </profile>
    </profiles>

    <servers>
        <server>
            <id>meveo</id>
            <username>${env.BUILD_USER}</username>
            <password>${env.BUILD_TOKEN}</password>
        </server>
        <server>
            <id>liquichain</id>
            <username>${env.BUILD_USER}</username>
            <password>${env.BUILD_TOKEN}</password>
        </server>
    </servers>
</settings>
